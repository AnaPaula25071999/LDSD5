@model CadernoDigital.Models.LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Logar" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label">Usuário</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <button type="submit" value="Enviar" class="btn btn-primary">Submit</button>

</form>