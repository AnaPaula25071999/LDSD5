@model PublicacaoModel
@{
    ViewData["Title"] = "Criar Publicação";
}

<div class="text-center">
    <h1 class="display-4">Publicar Conteúdo</h1>
</div>


<form asp-controller="Publicacao" asp-action="Publicar" method="post">

    <div class="form-group">
        <label for="conteudoTexto" class="form-label">Conteudo da publicação</label>
        <input type="text" asp-for="ConteudoTexto" class="form-control" placeholder="Digite sua publicação">
        @Html.ValidationMessageFor(x => x.ConteudoTexto)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-action="Publicar" asp-controller="Publicacao" role="button">Voltar</a>

</form>




